<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:contentPadding="8dp">

    <ImageView
        android:id="@+id/img_tv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:contentDescription="@string/acc_movie_poster"
        android:scaleType="centerCrop"
        tools:src="@mipmap/leak_canary_icon" />

    <TextView
        android:id="@+id/txt_tv_avg_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:text="7.4" />

    <TextView
        android:id="@+id/txt_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginTop="64dp"
        android:ellipsize="end"
        android:lines="4"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Mr. Bean a very long TV show title that will not overflow no no no" />
</androidx.cardview.widget.CardView>
